{
  "name": "Zone News Adelaide",
  "short_name": "Zone News",
  "description": "Your local Adelaide news source - real-time updates, personalized recommendations, and social engagement features",
  "version": "1.0.0",
  "start_url": "/telegram-mini-app/",
  "scope": "/telegram-mini-app/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "categories": ["news", "social", "lifestyle"],
  "lang": "en-AU",
  
  "icons": [
    {
      "src": "icons/icon-72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "screenshots": [
    {
      "src": "screenshots/mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Home screen with latest Adelaide news"
    },
    {
      "src": "screenshots/mobile-search.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Advanced search with auto-complete"
    },
    {
      "src": "screenshots/mobile-recommendations.png",
      "sizes": "390x844",
      "type": "image/png", 
      "form_factor": "narrow",
      "label": "Personalized news recommendations"
    },
    {
      "src": "screenshots/tablet-overview.png",
      "sizes": "1024x768",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Tablet view with enhanced layout"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Latest News",
      "short_name": "Latest",
      "description": "View the latest Adelaide news",
      "url": "/telegram-mini-app/?tab=home",
      "icons": [
        {
          "src": "icons/shortcut-news.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Saved Articles",
      "short_name": "Saved",
      "description": "View your saved articles",
      "url": "/telegram-mini-app/?tab=saved",
      "icons": [
        {
          "src": "icons/shortcut-saved.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Trending",
      "short_name": "Trending",
      "description": "See what's trending in Adelaide",
      "url": "/telegram-mini-app/?tab=trending",
      "icons": [
        {
          "src": "icons/shortcut-trending.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Recommendations",
      "short_name": "For You",
      "description": "Personalized news recommendations",
      "url": "/telegram-mini-app/?recommendations=true",
      "icons": [
        {
          "src": "icons/shortcut-recommendations.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/telegram-mini-app/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+zonenews",
      "url": "/telegram-mini-app/?article=%s"
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://t.me/ZoneNewsBot"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "file_handlers": [
    {
      "action": "/telegram-mini-app/import",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],
  
  "handle_links": "preferred",
  
  "scope_extensions": [
    {
      "origin": "https://t.me"
    }
  ]
}