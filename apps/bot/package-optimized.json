{
  "name": "@zone/bot",
  "version": "2.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --watch index.js index.js",
    "start": "NODE_ENV=production node index.js",
    "start:pm2": "pm2 start index.js --name zone-telegram-bot",
    "stop": "pm2 stop zone-telegram-bot",
    "restart": "pm2 restart zone-telegram-bot",
    "status": "pm2 status zone-telegram-bot",
    "logs": "pm2 logs zone-telegram-bot",
    "health": "curl -s http://localhost:3000/health",
    "clean": "rm -rf node_modules/.cache && rm -rf logs/*.log"
  },
  "dependencies": {
    "telegraf": "^4.16.3",
    "express": "^4.19.2",
    "mongoose": "^8.4.4",
    "cron": "^3.1.6",
    "express-rate-limit": "^7.1.5",
    "validator": "^13.11.0",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}