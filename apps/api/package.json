{
  "name": "@zone-news/api",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "node --watch src/server.js",
    "dev:secure": "node --watch src/secure-server.js",
    "start": "node dist/server.js",
    "start:secure": "node src/secure-server.js",
    "validate:security": "node ../../scripts/validate-security.js",
    "build": "cp -R src dist",
    "docs:serve": "swagger-ui-serve docs/zone-news-api.openapi.yml",
    "docs:validate": "swagger-codegen validate -i docs/zone-news-api.openapi.yml",
    "test:load": "artillery run tests/load/news-api.load.yml"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "mongodb": "^6.18.0",
    "jsonwebtoken": "^9.0.2",
    "@zone/shared": "workspace:*",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "validator": "^13.11.0",
    "helmet": "^7.1.0",
    "redis": "^4.7.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "mongodb-memory-server": "^9.5.0",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.0",
    "artillery": "^2.0.15"
  }
}